<Window x:Class="Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Canvas Background="Black" Name ="MyCanvas" KeyUp="OnKeyUp" KeyDown="OnKeyDown" Focusable="True">
        <Rectangle x:Name="player" Height="10" Canvas.Left="135" Stroke="Black" Fill="White" Canvas.Top="414" Width="80" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle x:Name="enemy" Height="10" Canvas.Left="135" Stroke="Black" Fill="White" Canvas.Top="10" Width="80" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Rectangle x:Name="ball" Height="10" Width="10" Canvas.Left="165" Canvas.Top="207" Stroke="White" Fill="White" />
    </Canvas>
</Window>
